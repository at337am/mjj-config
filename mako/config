# 注意: mako 配置不支持行内注释!

# 默认配置
default-timeout=3000

format=%s\n%b

layer=overlay
anchor=top-right

font=Adwaita Sans SemiBold 12

# 文字水平居中
text-alignment=center

width=250
height=375
margin=12
padding=12
border-size=2
border-radius=4

background-color=#fff5f2f2
border-color=#f5babbf2
text-color=#333333

# 低优先级通知
[urgency=low]
default-timeout=1000
anchor=center
margin=360,0,0,0
width=150

# 重要通知
[urgency=critical]
background-color=#ff8282d9
default-timeout=0

# --- 针对不同的 app-name ---

# 提示词
[app-name=prompts]
width=120

# 音量
[app-name=volume]
width=150

# 麦克风
[app-name=microphone]
width=120

# 测试:
# makoctl reload && notify-send "测试标题" "这是一个简洁的直角风格通知"
# notify-send -u low "低级通知" "这是一个低级通知"
# notify-send -u critical "紧急！" "这是一个紧急通知"

# 只有当 Firefox 发送的通知标题中包含 "Download" 时才触发
# [app-name=Firefox summary="*Download*"]

# 位置可选: top-right, top-center, top-left, bottom-right, bottom-center, bottom-left, center

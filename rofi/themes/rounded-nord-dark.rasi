* {
    font: "Google Sans Code 12";

    background-color: transparent;
    text-color: #e5e5e5;

    margin: 0px;
    padding: 0px;
    spacing: 0px;
}

window {
    location: north;
    y-offset: calc(50% - 176px);
    width: 480;
    border-radius: 0px;

    background-color: #2e2e2e;
}

mainbox {
    padding: 12px;
}

inputbar {
    border-color: #555555;

    border: 2px;
    border-radius: 0px;

    padding: 8px 16px;

    /* 子元素之间的间距 */
    spacing: 8px;

    /* children: [ prompt, entry]; */
}


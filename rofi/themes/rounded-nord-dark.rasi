listview {
    margin: 12px 0 0;

    /* 显示的行数 */
    lines: 8;

    /* 显示的列数 */
    columns: 1;

    /* 保持高度固定 */
    fixed-height: true;
}

element {
    padding: 8px 16px;
    spacing: 8px;
    border-radius: 0px;
}

/* 关闭搜索词条高亮 */
element-text {
    highlight: none;
}

